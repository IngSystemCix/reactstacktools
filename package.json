{
  "name": "reactstacktools",
  "displayName": "ReactStackTools",
  "description": "ðŸš€ A powerful VS Code extension to generate React components, hooks, middlewares, guards, and other essential project structures â€” all with best practices and productivity in mind.",
  "icon": "media/icon.png",
  "version": "0.0.1",
  "publisher": "ingsystemcix",
  "author": {
    "name": "Juan Bladimir Romero Collazos",
    "email": "juanromerocollazos@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IngSystemCix/reactstacktools.git"
  },
  "bugs": {
    "url": "https://github.com/IngSystemCix/reactstacktools/issues"
  },
  "homepage": "https://github.com/IngSystemCix/reactstacktools#readme",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "reactstacktools.generate",
        "title": "React: Generate File",
        "category": "ReactStackTools"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "reactstacktools.generate",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}